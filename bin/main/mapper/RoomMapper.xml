<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.workat.workat_project.room.repository.RoomMapper">

    <update id="updateSoldNum" parameterType="RoomVO">
        update
        room
        set
            sold_num = #{sold_num}
        where
            room_id = #{room_id}
    </update>

    <delete id="deleteUnavailableDate">
        delete
        from
            unavailable_date
        where
            room_id = #{roomId}
        and
            reserved_date = #{key}
    </delete>

    <insert id="insertUnavailableDate">
        insert into unavailable_date
        (room_id, reserved_date)
        values
            (#{roomId}, #{key})
    </insert>

    <select id="getRoomInfo" resultType="RoomVO">
        select
            *
        from
            room
        where
            place_id = #{placeId}
    </select>

    <select id="getReservedDate" resultType="java.time.LocalDate">
        select
            reserved_date
        from unavailable_date
        where
            room_id = #{roomId}
    </select>

    <select id="getRoomInfoByPlaceAndRoom" resultType="org.workat.workat_project.room.entity.RoomVO">
        select
            *
        from
            room
        where
            place_id = #{placeId}
        and
            room_id = #{roomId}
    </select>

    <select id="getAllRoomInfo" resultType="org.workat.workat_project.room.entity.RoomVO">
        SELECT *
        FROM room r
        WHERE r.status = 'active'
        AND EXISTS (
            SELECT 1
            FROM reservation res
            WHERE res.room_id = r.room_id
        )
    </select>

    <select id="getRowPrice" resultType="String">
        SELECT MIN(room_price)
        FROM room
        WHERE
        place_id = #{placeId}
    </select>


</mapper>