<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.workat.workat_project.user.repository.UserMapper">

    <select id="getUserList" resultType="UserVO">
        SELECT * FROM user
    </select>

    <select id="findUserByEmail" resultType="UserVO">
        SELECT
            *
        FROM
            user
        WHERE
            user_email = #{email}
    </select>

    <select id="getUserDetail" resultType="UserVO">
        SELECT *
        FROM user
        WHERE user_id = #{user_id}
    </select>

    <select id="findById" resultType="UserVO">
        SELECT *
        FROM user
        WHERE user_id = #{user_id};
    </select>

    <update id="deleteUser">
        UPDATE user
        SET status = 'inactive'
        WHERE user_id = #{user_id}
    </update>

    <update id="updateUser" parameterType="UserDetailDTO">
        UPDATE user
        SET user_email = #{user_email},
            user_pwd = #{user_pwd},
            user_nm = #{user_nm},
            user_tel = #{user_tel}
        WHERE user_id = #{user_id}
    </update>

    <update id="updatePassword" parameterType="UserVO">
        UPDATE user
        SET user_pwd = #{user_pwd}
        WHERE user_id = #{user_id}
    </update>

    <insert id="createUser" parameterType="UserDetailDTO">
        INSERT INTO user (
            user_email,
            user_pwd,
            user_nm,
            user_tel,
            role
            ) VALUES (
                  #{user_email},
                  #{user_pwd},
                  #{user_nm},
                  #{user_tel},
                      #{role}
            )
    </insert>

</mapper>