<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.workat.workat_project.room.repository.RoomMapper">

    <update id="updateSoldNum" parameterType="RoomVO">
        update
        room
        set
            sold_num = #{sold_num}
        where
            room_id = #{room_id}
    </update>

    <select id="getRoomInfo" resultType="RoomVO">
        select
            *
        from
            room
        where
            place_id = #{placeId}
    </select>

    <select id="getReservedDate" resultType="java.time.LocalDate">
        select
            reserved_date
        from unavailable_date
        where
            room_id = #{roomId}
    </select>


</mapper>