<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.workat.workat_project.picture.repository.PictureMapper">

    <select id="getPlacePictureSources" resultType="String">
        SELECT picture_source
        FROM place_picture
        WHERE place_id = #{placeId}
    </select>

    <select id="getRoomPictureSources" resultType="String">
        SELECT picture_source
        FROM room_picture
        WHERE room_id = #{roomId}
    </select>

    <select id="getReviewPictureSources" resultType="String">
        SELECT picture_source
        FROM review_picture
        WHERE review_id = #{reviewId}
    </select>

</mapper>